---
interface Feature {
  icon: string;
  title: string;
  description: string;
  href?: string;
}

interface Props {
  features: Feature[];
  columns?: 2 | 3 | 4;
}

const { features, columns = 3 } = Astro.props;

const columnClasses = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-2 lg:grid-cols-3',
  4: 'md:grid-cols-2 lg:grid-cols-4',
};
---

<div class={`grid grid-cols-1 ${columnClasses[columns]} gap-8`}>
  {features.map((feature) => (
    <div class="group">
      {feature.href ? (
        <a href={feature.href} class="block card h-full hover:border-primary-500 border-2 border-transparent transition-all">
          <div class="mb-4">
            <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-primary-100 text-primary-600 group-hover:bg-primary-600 group-hover:text-white transition-colors">
              <Fragment set:html={feature.icon} />
            </div>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
            {feature.title}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {feature.description}
          </p>
          <div class="mt-4 flex items-center text-primary-600 font-medium text-sm">
            Czytaj wiÄ™cej
            <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ) : (
        <div class="card h-full">
          <div class="mb-4">
            <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-primary-100 text-primary-600">
              <Fragment set:html={feature.icon} />
            </div>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">
            {feature.title}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {feature.description}
          </p>
        </div>
      )}
    </div>
  ))}
</div>