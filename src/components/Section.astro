---
interface Props {
  title?: string;
  subtitle?: string;
  centered?: boolean;
  background?: 'white' | 'gray' | 'gradient';
}

const { 
  title, 
  subtitle, 
  centered = false,
  background = 'white'
} = Astro.props;

const backgroundClasses = {
  white: 'bg-white',
  gray: 'bg-gray-50',
  gradient: 'bg-gradient-to-b from-white to-gray-50',
};
---

<section class={`section-padding ${backgroundClasses[background]}`}>
  <div class="container-custom">
    {(title || subtitle) && (
      <div class={`mb-12 ${centered ? 'text-center max-w-3xl mx-auto' : ''}`}>
        {title && (
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
            {title}
          </h2>
        )}
        {subtitle && (
          <p class="text-lg text-gray-600 leading-relaxed">
            {subtitle}
          </p>
        )}
      </div>
    )}
    
    <slot />
  </div>
</section>