---
const currentYear = new Date().getFullYear();

const footerLinks = {
  poradnik: [
    { href: '/poradnik-pisania', label: 'Poradnik Pisania' },
    { href: '/poradnik-pisania/jak-zaczac', label: 'Jak Zacząć' },
    { href: '/poradnik-pisania/struktura', label: 'Struktura Pracy' },
    { href: '/poradnik-pisania/bibliografia', label: 'Bibliografia' },
  ],
  ai: [
    { href: '/ai-w-pisaniu-prac-mgr', label: 'AI w Pisaniu' },
    { href: '/ai-w-pisaniu-prac-mgr/chatgpt', label: 'ChatGPT dla Studentów' },
    { href: '/ai-w-pisaniu-prac-mgr/etyka', label: 'Etyka AI' },
  ],
  legal: [
    { href: '/polityka-prywatnosci', label: 'Polityka Prywatności' },
    { href: '/regulamin', label: 'Regulamin' },
    { href: '/kontakt', label: 'Kontakt' },
  ],
};
---

<footer class="bg-gray-900 text-gray-300">
  <div class="container-custom section-padding">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center space-x-3 group mb-4">
          <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-primary-500 to-primary-700">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <span class="text-lg font-bold text-white group-hover:text-primary-400 transition-colors">
            MagisterkaOnline
          </span>
        </a>
        <p class="text-sm text-gray-400 mb-4">
          Kompleksowy poradnik pisania prac magisterskich. Od pomysłu do obrony.
        </p>
        <div class="flex space-x-4">
          <!-- Social links placeholder -->
          <a href="#" class="text-gray-400 hover:text-primary-400 transition-colors" aria-label="Facebook">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-primary-400 transition-colors" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-primary-400 transition-colors" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Poradnik Column -->
      <div>
        <h3 class="text-white font-semibold text-sm uppercase tracking-wider mb-4">Poradnik</h3>
        <ul class="space-y-3">
          {footerLinks.poradnik.map((link) => (
            <li>
              <a href={link.href} class="text-sm hover:text-primary-400 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- AI Column -->
      <div>
        <h3 class="text-white font-semibold text-sm uppercase tracking-wider mb-4">AI w Pisaniu</h3>
        <ul class="space-y-3">
          {footerLinks.ai.map((link) => (
            <li>
              <a href={link.href} class="text-sm hover:text-primary-400 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Column -->
      <div>
        <h3 class="text-white font-semibold text-sm uppercase tracking-wider mb-4">Informacje</h3>
        <ul class="space-y-3">
          {footerLinks.legal.map((link) => (
            <li>
              <a href={link.href} class="text-sm hover:text-primary-400 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-sm text-gray-400">
          © {currentYear} MagisterkaOnline.pl. Wszelkie prawa zastrzeżone.
        </p>
        <p class="text-sm text-gray-400">
          Stworzone z ❤️ dla polskich studentów
        </p>
      </div>
    </div>
  </div>
</footer>