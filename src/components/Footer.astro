---
const currentYear = new Date().getFullYear();

const footerLinks = {
  poradnik: [
    { href: '/wybor-tematu/', label: 'Wybór tematu' },
    { href: '/konspekt/', label: 'Konspekt pracy' },
    { href: '/cel-pracy-magisterskiej/', label: 'Cel pracy' },
    { href: '/jak-napisac-wstep/', label: 'Jak napisać wstęp' },
    { href: '/bibliografia/', label: 'Bibliografia' },
    { href: '/formatowanie/', label: 'Formatowanie' },
    { href: '/zakonczenie/', label: 'Zakończenie' },
    { href: '/obrona/', label: 'Obrona pracy' },
  ],
  metodologia: [
    { href: '/metodologia/', label: 'Metodologia - przegląd' },
    { href: '/metodologia/hipotezy-badawcze/', label: 'Hipotezy badawcze' },
    { href: '/metodologia/badania-ilosciowe/', label: 'Badania ilościowe' },
    { href: '/metodologia/badania-jakosciowe/', label: 'Badania jakościowe' },
    { href: '/metodologia/jak-przeprowadzic-ankiete/', label: 'Jak przeprowadzić ankietę' },
    { href: '/metodologia/analiza-danych-ilosciowych/', label: 'Analiza danych' },
  ],
  inne: [
    { href: '/cytowanie-i-cytaty/', label: 'Cytowanie i cytaty' },
    { href: '/spis-tresci/', label: 'Spis treści' },
    { href: '/streszczenie/', label: 'Streszczenie pracy' },
  ],
  legal: [
    { href: '/polityka-prywatnosci/', label: 'Polityka Prywatności' },
    { href: '/regulamin/', label: 'Regulamin' },
    { href: '/kontakt/', label: 'Kontakt' },
  ],
};
---

<footer class="bg-gray-900 text-gray-300">
  <div class="container-custom py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center space-x-3 group mb-4">
          <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-primary-500 to-primary-700">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <span class="text-lg font-bold text-white group-hover:text-primary-400 transition-colors">
            MagisterkaOnline
          </span>
        </a>
        <p class="text-sm text-gray-400 mb-4">
          Kompleksowy poradnik pisania prac magisterskich. Od wyboru tematu, przez metodologię, aż po obronę.
        </p>
        <p class="text-xs text-gray-500">
          Stworzony z ❤️ dla polskich studentów
        </p>
      </div>

      <!-- Poradnik Column -->
      <div>
        <h3 class="text-white font-semibold text-sm uppercase tracking-wider mb-4">Poradnik pisania</h3>
        <ul class="space-y-2">
          {footerLinks.poradnik.map((link) => (
            <li>
              <a href={link.href} class="text-sm hover:text-primary-400 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Metodologia Column -->
      <div>
        <h3 class="text-white font-semibold text-sm uppercase tracking-wider mb-4">Metodologia</h3>
        <ul class="space-y-2">
          {footerLinks.metodologia.map((link) => (
            <li>
              <a href={link.href} class="text-sm hover:text-primary-400 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Inne Column -->
      <div>
        <h3 class="text-white font-semibold text-sm uppercase tracking-wider mb-4">Inne artykuły</h3>
        <ul class="space-y-2">
          {footerLinks.inne.map((link) => (
            <li>
              <a href={link.href} class="text-sm hover:text-primary-400 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Column -->
      <div>
        <h3 class="text-white font-semibold text-sm uppercase tracking-wider mb-4">Informacje</h3>
        <ul class="space-y-2">
          {footerLinks.legal.map((link) => (
            <li>
              <a href={link.href} class="text-sm hover:text-primary-400 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-sm text-gray-400">
          © {currentYear} MagisterkaOnline.pl. Wszelkie prawa zastrzeżone.
        </p>
        <div class="flex items-center space-x-4">
          <span class="text-xs text-gray-500">Polecamy:</span>
          <a 
            href="https://www.smart-edu.ai" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-sm text-primary-400 hover:text-primary-300 transition-colors"
          >
            Smart-Edu.ai
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>